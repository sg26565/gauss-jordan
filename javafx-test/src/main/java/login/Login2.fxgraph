package login

import javafx.scene.layout.GridPane
import javafx.geometry.Insets
import javafx.scene.text.Text
import javafx.scene.control.Label
import javafx.scene.control.TextField
import javafx.scene.control.PasswordField

component Login {
	GridPane {
		styleClass : "root",
		alignment : "CENTER",
		hgap : 10,
		vgap : 10,
		padding : Insets {
			top : 25,
			right : 25,
			bottom : 10,
			left : 25
		},
		Text {
			text : "welcome",
			static columnIndex : 0,
			static columnSpan : 2,
			static rowIndex : 0
		},
		Label {
			text : "User Name:",
			static columnIndex : 0,
			static rowIndex : 1
		},
		TextField {
			static columnIndex : 1,
			static rowIndex : 1			
		},
		Label {
			text : "Password:",
			static columnIndex : 0,
			static rowIndex : 2
		},
		PasswordField {
			static columnIndex : 1,
			static rowIndex : 2						
		}
	}
}
